<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.symbol.basickiosk.MainActivity">

    <TextView
        android:text="Status:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_status"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:minLines="5"
        android:scrollbars="vertical" />

    <Button
        android:text="Start Kiosk Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_startkiosk"
        android:visibility="invisible" />

    <Button
        android:text="Stop Kiosk Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_startkiosk"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_stopkioskmode"
        android:visibility="invisible" />

    <Button
        android:text="Set Home Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_stopkioskmode"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_sethome"
        android:visibility="invisible" />

    <Button
        android:text="Restore Home Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_sethome"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_resethome"
        android:visibility="invisible" />

    <Button
        android:text="Remove Device Owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_resethome"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_removedevowner"
        android:visibility="invisible" />

</RelativeLayout>
